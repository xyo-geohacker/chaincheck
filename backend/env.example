PORT=4000
NODE_ENV=development

DATABASE_URL=postgresql://dbuser:dbpass@localhost:5432/chaincheck

XYO_ARCHIVE=chaincheck

# XYO Network Feature Flags
# Set to "true" to disable Archivist communication (all Archivist API calls will be skipped)
XYO_ARCHIVIST_DISABLED=false
# Set to "true" to disable Diviner communication (all Diviner API calls will be skipped, mock data will be returned)
XYO_DIVINER_DISABLED=false

# Server Hostnames (for Configuration UI status links)
# Set these to your actual IP address or hostname if servers are accessed remotely
# Defaults to "localhost" for local development
BACKEND_HOST=localhost
WEB_HOST=localhost
MOBILE_HOST=localhost

# XL1 Configuration
# REQUIRED for real XL1 transactions (when MOCK_XL1_TRANSACTIONS=false or not set)
# Optional when MOCK_XL1_TRANSACTIONS=true (a temporary mnemonic will be generated)
# Generate a mnemonic using: GET /api/wallet/generate-mnemonic
XYO_WALLET_MNEMONIC=your twelve word mnemonic phrase here

# XL1 RPC endpoint
# XYO_CHAIN_RPC_URL=https://beta.api.chain.xyo.network/rpc
XYO_CHAIN_RPC_URL=http://localhost:8080/rpc

# Known Networks (reference)
# - Mainnet Chain ID: dd381fbb392c85160d8b0453e446757b12384046
# - Sequence/Beta RPC: https://beta.api.chain.xyo.network/rpc
# - Local RPC: http://localhost:8080/rpc
# Optionally pin a chain ID explicitly for XL1:
# XYO_CHAIN_ID=dd381fbb392c85160d8b0453e446757b12384046

# Archivists (reference)
# - Production Archivist:
#   XYO_ARCHIVIST_URL=https://api.archivist.xyo.network
# - Staging/Beta Archivist (if available):
#   XYO_ARCHIVIST_URL=https://beta.api.archivist.xyo.network
# - Local Archivist (see ./archivist/docker-compose.yml for setup):
#   XYO_ARCHIVIST_URL=http://localhost:8888
# - API Key (required for Archivist/Diviner gateways when configured):
#   XYO_API_KEY=your_xyo_api_key

# Diviners (reference)
# These are example Diviner module hosts. Use the one appropriate for your environment.
# - Public Diviner host (example):
#   XYO_DIVINER_URL=https://diviner.xyo.network
# - Local Diviner:
#   XYO_DIVINER_URL=http://localhost:9999
# Notes:
# - Diviner POST endpoint is typically: ${XYO_DIVINER_URL}/query
# - Request payload format is generally: [QueryBoundWitness, Payload[]]

# Development: Mock XL1 transactions (set to 'true' to use stubbed transaction hashes)
# This allows development to proceed without actual blockchain connectivity
MOCK_XL1_TRANSACTIONS=true

WEB_URL=https://chaincheck.vercel.app

PINATA_API_KEY=your_pinata_key
PINATA_SECRET_KEY=your_pinata_secret

# JWT Authentication Secret
# Generate a strong random secret for production (e.g., using: openssl rand -base64 32)
# In development, a default secret will be used if not provided
JWT_SECRET=your_jwt_secret_here_change_in_production

