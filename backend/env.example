#########################
# Backend Configuration #
#########################

PORT=4000
NODE_ENV=development
DATABASE_URL=postgresql://dbuser:dbpass@localhost:5432/chaincheck

# XYO Archive (for Archivist and Diviner)
XYO_ARCHIVE=chaincheck

# JWT Authentication Secret
# Generate a strong random secret for production (e.g., using: openssl rand -base64 32)
# In development, a default secret will be used if not provided
JWT_SECRET=

##################################
# Configuration UI Configuration #
##################################

# Backend server IP/hostname
BACKEND_HOST=localhost

# Web server IP/hostname
WEB_HOST=localhost

# Mobile server IP/hostname
MOBILE_HOST=localhost

#####################
# Web Configuration #
#####################

# WEB_URL=https://chaincheck.vercel.app
WEB_URL=http://localhost:4000

PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_KEY=your_pinata_secret_key

#############################
# XYO Network Configuration #
#############################

# Archivist Details
XYO_ARCHIVIST_DISABLED=false

# Mainnet
# XYO_ARCHIVIST_URL=https://api.archivist.xyo.network
# Sequence
# XYO_ARCHIVIST_URL=https://beta.api.archivist.xyo.network
# Local (see ./archivist/docker-compose.yml for setup)
XYO_ARCHIVIST_URL=http://localhost:8888

# XYO API Key (typically for Archivist requests - e.g., 12345678-1234-5678-90ab-1234567890ab)
XYO_API_KEY=

# Diviner Details (/location/query)
XYO_DIVINER_DISABLED=false

# Mainnet
# XYO_DIVINER_URL=https://api.location.diviner.xyo.network
# Sequence
# XYO_DIVINER_URL=https://beta.api.location.diviner.xyo.network
# Local
XYO_DIVINER_URL=http://localhost:9999

#####################
# XL1 Configuration #
#####################

# XL1 RPC Details
# Mainnet
# XYO_CHAIN_RPC_URL=https://api.chain.xyo.network/rpc
# Sequence
XYO_CHAIN_RPC_URL=https://beta.api.chain.xyo.network/rpc
# Local
# XYO_CHAIN_RPC_URL=http://localhost:8080/rpc

# XL1 Chain Details
# Mainnet
# XYO_CHAIN_ID=319e667ced10452a117472811130444ded357f26
# Sequence
XYO_CHAIN_ID=dd381fbb392c85160d8b0453e446757b12384046

# Development: Mock XL1 transactions (set to 'true' to use stubbed transaction hashes)
# This allows development to proceed without actual blockchain connectivity
MOCK_XL1_TRANSACTIONS=false
MOCK_XL1_TRANSACTION_ID=6bdd1aefe60a3d234dfe710a8ac144ee81beabf66ddb3df4383d937973f9bc4e # Sequence
# MOCK_XL1_TRANSACTION_ID=491a4b77e66192d7fbfa549bd287bab665ffbec46f31609dfe215f4cc53ed657 # Mainnet

# REQUIRED for real XL1 transactions (when MOCK_XL1_TRANSACTIONS=false or not set)
# Optional when MOCK_XL1_TRANSACTIONS=true (a temporary mnemonic will be generated)
# Generate a mnemonic using: GET /api/wallet/generate-mnemonic
# Do NOT share this value!
XYO_WALLET_MNEMONIC=your_xyo_wallet_mnemonic