EXPO_PUBLIC_API_URL=http://10.0.2.2:4000

# Mapbox Access Token (required for @rnmapbox/maps)
# Get your access token from: https://account.mapbox.com/access-tokens/ - starts with pk.*
EXPO_PUBLIC_MAPBOX_TOKEN=your_mapbox_access_token_here

# Mapbox Downloads Token (required for @rnmapbox/maps iOS native SDK)
# IMPORTANT: This must be a SECRET token (starts with 'sk.') with 'Downloads:Read' scope
# Get your secret token from: https://account.mapbox.com/access-tokens/
# This is different from EXPO_PUBLIC_MAPBOX_TOKEN - it's used for downloading Mapbox SDK
MAPBOX_DOWNLOADS_TOKEN=your_mapbox_downloads_token_here

# Mock Driver Location (for testing)
# When set to 'true', automatically uses the delivery destination coordinates instead of actual GPS location
# This allows testing deliveries from any location without physically being at the delivery address
# Default: false (uses actual GPS location)
# Note: Must be prefixed with EXPO_PUBLIC_ to be accessible in the app
EXPO_PUBLIC_MOCK_DRIVER_LOCATION=false

